{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "auth-1",
  "title": "Auth 1",
  "description": "A split layout authentication page with a form and a decorative image.",
  "dependencies": [
    "motion",
    "lucide-react"
  ],
  "registryDependencies": [
    "button",
    "input",
    "label",
    "checkbox",
    "separator"
